
{{ content.tips }}

<div class="row py-1">
  {# style for bs5 #}
  {% for v in content.models %}
   <div class="col-2">
     <div class="tkdb-boxlist text-center">
       <h4 class="mb-0">{{ v.name }}</h4>
       <p>{{ v.config_dir }}</p>
       <p>
       <ul class="operations clearfix action-links text-center list-group list-group-horizontal">
         {% if v.config_dir == 'default' %}
           <li class="action-links__item list-group-item text-nowrap mx-auto">
             {{ v.edit }}
           </li>
         {% elseif v.is_empty %}
           <li class="action-links__item  list-group-item text-nowrap mx-auto">
             {{ v.link_empty }}
           </li>
         {% else %}
           <li class="action-links__item list-group-item text-nowrap mx-auto">
             {{ v.edit }}
           </li>
           <li class="action-links__item list-group-item text-nowrap mx-auto">
             {{ v.delete }}
           </li>
         {% endif %}
       </ul>
       </p>
     </div>
   </div>
  {% endfor %}

</div>

{{ content.second }}

<div class="row py-1">
  {% for station in content.stations %}
  <div class="col-3 d-flex">
    <div class="tkdb-boxlist">
      <dl style="width: 200px;text-align:left;">
        <dt>
          <p style="text-align:left;">分组名称：<b>{{ station.name }}</b></p>
          <p style="text-align:left;">所属模型：{{ station.model }}</p>
        </dt>
        <dd>
          <b style="color:black">主配置：</b>
            {% if station.master.is_empty %}
              {{ station.master.link_empty }}
            {% else %}
              {{ station.master.edit }}
              {{ station.master.delete }}
            {% endif %}
        </dd>
        <dd style="margin-top:5px;border-top:1px dotted #ccc;padding:5px 0;">
          <b style="color:black">泛域名：</b>
            {% if station.wild.is_empty %}
                {{ station.wild.link_empty }}
            {% else %}
                {{ station.wild.edit }}
                {{ station.wild.delete }}
            {% endif %}
        </dd>
      </dl>
    </div>
  </div>
  {% endfor %}

</div>
